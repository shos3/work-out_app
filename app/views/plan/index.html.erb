<%# CSS・・・assets/stylesheets/plans/index.css %>
<% content_for :css do %>
  <%= stylesheet_link_tag 'plan' %>
<% end %>


<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <title>Work-out</title>
    <link rel="stylesheet" href=plans/index.scss>
  </head>


<div class="nickname">
<%= "こんにちは" "#{current_user.nickname}" "さん" %>
</div>
<h3>aaaaaaaaaaaaaa</h3>
<li><%= link_to 'ログアウト', destroy_user_session_path, class: "sign-out" %></li>

<li><%= link_to 'トレーニング記録へ',  plan_show_path,method: :get, class: "btn" %></li>




<p id="notice"><%= notice %></p>
<div class= "carender">
<h4>カレンダー</h4>
</div>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.title %></td>
        <td><%= plan.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan.id) %></td>
        <td><%= link_to 'Destroy',plan_path(plan.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= month_calendar events: @plans do |date, plans| %>
  <%= date.day %>

  <% plans.each do |plan| %>
    <div>
      <%= link_to plan.title, plan %>
    </div>
  <% end %>
<% end %>
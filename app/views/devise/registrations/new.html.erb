<!--<h2>新規登録</h2>-->
<div class="form-wrapper">
  <h1>Sign Up</h1>
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


   <div class="form-item">
        <%= f.label :ニックネーム %> <em>（最大6文字）</em>
        <%= f.text_field :nickname, autofocus: true, maxlength: "6" %>
      </div>

  <div class="form-itemr">
    <%= f.label :年齢 %>
    <%= f.number_field :age,{min: 0, max: 99}%>
  </div>


  <div class="form-item">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>

  <div class="form-item">
    <%= f.label :バスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-item">
    <%= f.label :確認パスワード %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

<th>性別</th>
<%= f.radio_button :gender, :男 %>
<%= f.label :男 %>
<%= f.radio_button :gender, :女 %>
<%= f.label :女 %> 

  <div class="button-panel">
    <%= f.submit "Sign up" ,class: "button" %>
  </div>
<% end %>



